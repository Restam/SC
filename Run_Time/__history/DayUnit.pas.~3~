unit DayUnit;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants, 
  FMX.Types, FMX.Graphics, FMX.Controls, FMX.Forms, FMX.Dialogs, FMX.StdCtrls,
  FMX.Layouts, FMX.ListBox, MainUnit;

type
  TDayFrame = class(TFrame)
    DayPeriodLabel: TLabel;
    EventsBox: TListBox;
    procedure DayPeriodLabelClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

implementation

{$R *.fmx}

procedure TDayFrame.DayPeriodLabelClick(Sender: TObject);
begin
  try
   SCalendar.LoadDayRepresentation(StrToDate(DayPeriodLabel.Text));
  except
  end;
end;

end.
